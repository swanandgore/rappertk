#CLIPPER = /home/swanand/downloads/CLIPPER/clipper

# for using electron-density restraints, clipper is essential. set CLIPPER env-var appropriately
ifdef CLIPPER
LINCFLAGS += -L$(CLIPPER)/ccp4-onlylibs-dev/lib \
                -L$(CLIPPER)/lib/ \
                -L$(CLIPPER)/clipper/minimol/ \
                -L$(CLIPPER)/clipper/mmdb/ -lclipper-mmdb \
                -L$(CLIPPER)/clipper/mmdbold/ -lclipper-mmdbold \
                -L$(CLIPPER)/clipper/phs/ -lclipper-phs \
                -L$(CLIPPER)/clipper/cif/ -lclipper-cif \
                -L$(CLIPPER)/clipper/contrib/ -lclipper-contrib \
                -L$(CLIPPER)/clipper/core/ \
                -lclipper-ccp4 -lccp4c -lclipper-minimol -lclipper-mmdb -lclipper-mmdbold -lclipper-phs -lclipper-cif -lclipper-contrib -lclipper-core -lrfftw -lfftw -lmmdb -lm
INCFLAGS += -I$(CLIPPER)/ccp4-onlylibs-dev/include -I$(CLIPPER)/mmdb/mmdb -I$(CLIPPER)/cctbx -I$(CLIPPER)/include
CFLAGS += -DCLIPPER
endif

