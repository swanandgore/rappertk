                                initatoms = initatoms + 1
                                nl = makePDBatomline2(atom,initatoms,aname, lr, chainid, ' ',0.000, 0.000, 0.000,1.0,20.0) 
                                newfileList.append("%s\n"%nl)
                    else  : 

                        aa = loopres[lcounter+lr]
